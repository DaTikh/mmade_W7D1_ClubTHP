<h1>Liste des membres</h1>

<div class="row justify-content-center">
<% User.all.each do |u| %>
  <div class="col-lg-6 border border-primary">
    <p><%= u.firstname.capitalize %> <%= u.lastname.capitalize %></p>
    <p>Email : <%= u.email %></p>
    <%= link_to "Voir le profil", profile_path(u), class: "btn btn-info" %>
  </div>
<% end %>
</div>
